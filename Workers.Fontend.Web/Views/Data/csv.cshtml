@{
    Layout = null;
    Response.ContentType = "text/csv";
    Response.AddHeader("Content-Disposition",string.Format("attachment;filename={0}",Model.Filename));
}
@model Workers.Fontend.Web.Models.CsvModel

@string.Join(",", Model.Rows.First().Columns.Select(c=>c.Name))
@foreach(var row in Model.Rows)
{
    @:@string.Join(",",row.Columns.Select(c=>c.Value))
}